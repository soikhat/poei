{%
 set class=[
    'layout',
    'layout--foursquare',
]
 %}
{% if content %}
    <div class="square-layout" >
        {% if content.top_left %}
            <div class="square">{{ content.top_left }}</div>
        {% endif %}
        {% if content.top_right %}
            <div class="square">{{ content.top_right }}</div>
        {% endif %}
        {% if content.bottom_left %}
            <div class="square">{{ content.bottom_left }}</div>
        {% endif %}
        {% if content.bottom_right %}
            <div class="square">{{ content.bottom_right }}</div>
        {% endif %}
    </div>
{% endif %}

